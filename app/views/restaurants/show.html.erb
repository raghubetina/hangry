<div class="page-header">
  <%= link_to restaurants_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_restaurant_path(@restaurant), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show restaurant</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @restaurant.name %></dd>

  <dt>Address:</dt>
  <dd><%= @restaurant.address %></dd>

  <dt>Phone number:</dt>
  <dd><%= @restaurant.phone_number %></dd>

  <dt>Yelp url:</dt>
  <dd><%= @restaurant.yelp_url %></dd>

  <dt>Opens at:</dt>
  <dd><%= @restaurant.opens_at %></dd>

  <dt>Closes at:</dt>
  <dd><%= @restaurant.closes_at %></dd>

</dl>
